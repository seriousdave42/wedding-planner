@using WeddingPlanner.Models;
@using System.Web;
@model Wedding;

@{
    string url = HttpUtility.UrlEncode(Model.Address);
}

<div class="row justify-content-around">
    <h1 class="col-7">@Model.Wedder1 & @Model.Wedder2's Wedding</h1>
    <a class="col-2" asp-action="Dashboard">Dashboard</a>
    <a class="col-2" asp-action="Logout">Log Out</a>
</div>

<h3>@Model.Date.ToString("f")</h3>
<br><br>
<div class="row justify-content-between">
    <ul class="col-4"><h4>Guests:</h4>
        @foreach (Guest g in Model.Attendees)
        {
        <li>@g.Attendee.FirstName @g.Attendee.LastName</li>
        }
    </ul>
    <img class="col-7" src="https://maps.googleapis.com/maps/api/staticmap?center=@url&zoom=15&size=400x400
        &markers=size:small%7Ccolor:purple%7C%@url
        &key=AIzaSyBTpmtePklEKYKF5zgBpXIigssPTdkJWRU" 
        alt="Location map">
</div>
