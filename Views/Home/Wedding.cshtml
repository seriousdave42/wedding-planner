@using WeddingPlanner.Models;
@model Wedding;

<div class="row">

    <div class="col-5">

        <h2>Plan a Wedding</h2><br>

        <form asp-action="NewWedding" method="post">
            <div class="form-group">
                <span asp-validation-for="Wedder1" class="text-danger"></span><br>
                <label asp-for="Wedder1">Wedder One</label>
                <input asp-for="Wedder1" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Wedder2" class="text-danger"></span><br>
                <label asp-for="Wedder2">Wedder Two</label>
                <input asp-for="Wedder2" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Date" class="text-danger"></span><br>
                <label asp-for="Date">Date</label>
                <input asp-for="Date" class="form-control">
            </div>
            <div class="form-group">
                <span asp-validation-for="Address" class="text-danger"></span><br>
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>

</div>
